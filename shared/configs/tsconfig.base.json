{
  "exclude": [
    ".git",
    "node_modules",
    "lib",
    "module",
    ".cache"
  ],
  "compilerOptions": {
    // ✅ 厳格チェック
    "alwaysStrict": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    // ✅ ターゲットとモジュール解決
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "verbatimModuleSyntax": true,
    // ✅ 型解決と互換性
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    // typesRoots : 必要な場合に設定
    // ✅ 出力・ソースマップ
    "sourceMap": false,
    "newLine": "LF",
    "composite": false,
    // incremental build
    "incremental": true,
    // "tsBuildInfoFile": ".cache/tsbuildinfo",  // 各リポジトリで設定
    // input/output Dir
    // "outDir": "./dist",  // 各リポジトリで設定
    // ✅ ライブラリ
    "lib": [
      "ESNext",
      "DOM"
    ],
    // ✅ エイリアス設定（←追加！）
    "baseUrl": ".",
    // "paths": {},      // 外部パッケージ用にリザーブ
    // ✅ 型補完
    // "typeRoots": [],   // typesが読み込めない場合に設定
    "types": [
      "node",
    ]
  }
}
